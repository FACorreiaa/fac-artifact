templ experienceItem(title string, company string, period string, location string, bullets []string) {
	<div class="mb-8 last:mb-0">
		<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2">
			<div>
				<h3 class="text-xl font-bold text-foreground">{ title }</h3>
				<p class="text-primary font-medium">{ company }</p>
			</div>
			<div class="text-muted-foreground text-sm md:text-right">
				<p>{ period }</p>
				<p>{ location }</p>
			</div>
		</div>
		<ul class="list-disc list-inside space-y-1 text-muted-foreground">
			for _, bullet := range bullets {
				<li>{ bullet }</li>
			}
		</ul>
	</div>
}

templ educationItem(degree string, school string, date string, location string, gpa string) {
	<div class="card p-6">
		<h3 class="font-bold text-foreground text-lg">{ degree }</h3>
		<p class="text-primary">{ school }</p>
		<p class="text-muted-foreground text-sm">{ date } | { location }</p>
		<p class="text-sm font-medium text-foreground mt-2">{ gpa }</p>
	</div>
}
