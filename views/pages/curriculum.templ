templ experienceItem(title string, company string, period string, location string, bullets []string, isCurrent bool) {
	<div class="relative group">
		<!-- Timeline Dot -->
		<div class={ "absolute -left-[41px] md:-left-[73px] top-1 w-5 h-5 rounded-full border-4 border-background transition-all duration-300 group-hover:scale-125 " + 
			templ.SafeCSS(func() string { if isCurrent { return "bg-primary shadow-[0_0_10px_rgba(var(--primary),0.5)]" } else { return "bg-border group-hover:bg-primary" } }()) }>
		</div>
		
		<div class="grid md:grid-cols-[200px_1fr] gap-4 md:gap-8 items-start">
			<div class="md:text-right">
				<div class="inline-block md:block bg-secondary/30 md:bg-transparent rounded-full px-3 py-1 md:p-0 text-sm font-mono text-muted-foreground border border-border/50 md:border-0 mb-2 md:mb-0">
					{ period }
				</div>
				<div class="text-xs text-muted-foreground hidden md:block mt-1 opacity-70">{ location }</div>
			</div>
			
			<div class="bg-card/50 p-6 md:p-0 md:bg-transparent rounded-xl md:rounded-none border border-border/50 md:border-0 transition-all duration-300 group-hover:translate-x-1">
				<h3 class="text-xl font-bold text-foreground group-hover:text-primary transition-colors duration-300 flex items-center gap-2">
					{ title }
					if isCurrent {
						<span class="inline-block w-2 h-2 bg-primary rounded-full animate-pulse"></span>
					}
				</h3>
				<p class="text-lg font-medium text-muted-foreground mb-4">{ company }</p>
				<div class="md:hidden text-xs text-muted-foreground mb-4 font-mono opacity-70">{ location }</div>
				
				<ul class="space-y-3">
					for _, bullet := range bullets {
						<li class="flex items-start gap-3 text-muted-foreground text-base leading-relaxed">
							<span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-primary/40 shrink-0 group-hover:bg-primary transition-colors duration-300"></span>
							<span>{ bullet }</span>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
}

templ educationItem(degree string, school string, date string, location string, gpa string) {
	<div class="group p-6 rounded-xl bg-card border border-border/50 hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5 transition-all duration-300 hover:-translate-y-1">
		<div class="flex justify-between items-start mb-4">
			<div>
				<h3 class="font-bold text-foreground text-lg group-hover:text-primary transition-colors">{ degree }</h3>
				<p class="text-muted-foreground">{ school }</p>
			</div>
			<span class="text-xs font-mono bg-secondary/50 px-2 py-1 rounded text-muted-foreground border border-border/50">{ date }</span>
		</div>
		<div class="flex justify-between items-end mt-4 pt-4 border-t border-border/30">
			<span class="text-sm text-muted-foreground flex items-center gap-1">
				<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-50"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
				{ location }
			</span>
			<span class="font-medium text-foreground bg-primary/10 text-primary px-3 py-1 rounded-full text-xs">{ gpa }</span>
		</div>
	</div>
}
