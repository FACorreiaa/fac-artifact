templ experienceItem(title string, company string, period string, location string, bullets []string) {
	<div class="timeline-item animate-fade-in-up">
		<div class="glass-card p-6 rounded-xl ml-4">
			<div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
				<div>
					<h3 class="text-xl font-bold text-foreground">{ title }</h3>
					<p class="text-primary font-medium">{ company }</p>
				</div>
				<div class="text-muted-foreground text-sm md:text-right mt-2 md:mt-0">
					<p class="font-medium">{ period }</p>
					<p>{ location }</p>
				</div>
			</div>
			<ul class="space-y-2 text-muted-foreground">
				for _, bullet := range bullets {
					<li class="flex items-start gap-2">
						<span class="text-primary mt-1.5 flex-shrink-0">‚Ä¢</span>
						<span>{ bullet }</span>
					</li>
				}
			</ul>
		</div>
	</div>
}

templ educationItem(degree string, school string, date string, location string, gpa string) {
	<div class="glass-card p-6 rounded-xl hover-lift">
		<div class="flex items-start gap-4">
			<div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center text-2xl flex-shrink-0">üéì</div>
			<div>
