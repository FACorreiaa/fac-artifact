package pages

import "github.com/FACorreiaa/fac-artifact/views/layouts"
import "github.com/FACorreiaa/fac-artifact/views/components"

templ Index() {
	@layouts.Base("Projects | GoForge") {
		<div class="min-h-screen flex flex-col bg-background text-foreground">
			@components.Navbar()
			<main class="flex-1">
				<!-- Hero Section -->
				<section class="min-h-[70vh] bg-gradient-to-br from-primary/10 via-background to-accent/10 flex items-center justify-center">
					<div class="text-center px-4">
						<div class="max-w-2xl mx-auto">
							<h1 class="text-5xl font-bold mb-6 text-foreground">
								Welcome to <span class="text-primary">GoForge</span>
							</h1>
							<p class="text-xl mb-8 text-muted-foreground">
								A production-ready PWA built with Go, Chi, Templ, HTMX, and BasecoatUI.
								Build amazing projects with style.
							</p>
							<div class="flex gap-4 justify-center flex-wrap">
								<a href="https://go.dev" target="_blank" class="btn btn-lg btn-primary inline-flex items-center gap-2">
									<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
									</svg>
									Get Started
								</a>
								<a href="https://github.com" target="_blank" class="btn btn-lg btn-outline">
									View on GitHub
								</a>
							</div>
						</div>
					</div>
				</section>
				<!-- Features Section -->
				<section class="py-20 px-4 bg-background">
					<div class="container mx-auto max-w-6xl">
						<h2 class="text-3xl font-bold text-center mb-12 text-foreground">Stack Features</h2>
						<div class="grid md:grid-cols-3 gap-6">
							@featureCard("ğŸš€", "Chi Router", "Lightweight, composable router with excellent middleware support.")
							@featureCard("ğŸ“", "Templ", "Type-safe HTML templates with Go. No runtime parsing.")
							@featureCard("âš¡", "HTMX", "High-powered hypermedia exchange. No JavaScript framework needed.")
							@featureCard("ğŸ¨", "BasecoatUI", "Beautiful UI components built on Tailwind CSS.")
							@featureCard("ğŸ˜", "PostgreSQL", "Robust database with pgxpool connection pooling.")
							@featureCard("ğŸ”¥", "Live Reload", "Air + Tailwind watch for instant feedback during development.")
						</div>
					</div>
				</section>
				<!-- HTMX Demo Section -->
				<section class="py-20 px-4 bg-muted">
					<div class="container mx-auto max-w-2xl text-center">
						<h2 class="text-3xl font-bold mb-8 text-foreground">HTMX in Action</h2>
						<div class="card w-full">
							<section class="flex flex-col gap-4">
								<p class="text-foreground">Click the button to fetch data from the API:</p>
								<button
									class="btn"
									hx-get="/api/hello"
									hx-target="#api-result"
									hx-swap="innerHTML"
								>
									Fetch Message
								</button>
								<div id="api-result" class="p-4 bg-muted rounded-lg min-h-[60px] text-muted-foreground border border-border">
									<span>Click the button above...</span>
								</div>
							</section>
						</div>
					</div>
				</section>
			</main>
			@components.Footer()
		</div>
	}
}

templ featureCard(emoji string, title string, description string) {
	<div class="card p-6 h-full hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
		<section class="flex flex-col items-center text-center gap-2">
			<div class="text-4xl">{ emoji }</div>
			<h3 class="text-xl font-bold text-foreground">{ title }</h3>
			<p class="text-muted-foreground text-sm">{ description }</p>
		</section>
	</div>
}
