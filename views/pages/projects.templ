				</section>

				<!-- CTA Section -->
				<section class="py-20 px-4 bg-muted">
					<div class="container mx-auto max-w-4xl text-center">
						<div class="glass-card p-12 rounded-2xl">
							<h2 class="text-3xl font-bold mb-4 text-foreground">Let's Build Something Together</h2>
