templ statCard(number string, label string, delay string) {
	<div class={ "text-center animate-on-load animate-delay-" + delay }>
		<div class="text-4xl md:text-5xl font-bold gradient-text mb-2 font-display">{ number }</div>
		<div class="text-sm text-muted-foreground font-medium uppercase tracking-wider">{ label }</div>
	</div>
}

templ philosophyCard(title string, description string, delay string) {
	<div class={ "project-card card-hover-lift p-8 rounded-xl animate-on-load animate-delay-" + delay }>
		<h3 class="text-xl font-bold text-foreground mb-3 font-display">{ title }</h3>
		<p class="text-muted-foreground leading-relaxed">{ description }</p>
	</div>
}

templ contactCard(label string, value string, link string, icon string, delay string) {
	<a
		href={ templ.SafeURL(link) }
		target="_blank"
		rel="noopener noreferrer"
		class={ "project-card card-hover-lift p-8 text-center rounded-xl block animate-on-load animate-delay-" + delay }
	>
		<div class="text-5xl mb-4">{ icon }</div>
		<div class="font-bold text-foreground mb-2 font-display">{ label }</div>
		<div class="text-sm text-primary font-mono break-all">{ value }</div>
	</a>
}
