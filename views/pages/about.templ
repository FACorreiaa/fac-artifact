templ valueCard(emoji string, title string, description string) {
	<div class="glass-card p-6 rounded-xl text-center hover-lift animate-fade-in-up">
		<div class="text-4xl mb-4">{ emoji }</div>
		<h3 class="font-bold text-foreground mb-2">{ title }</h3>
		<p class="text-sm text-muted-foreground">{ description }</p>
	</div>
}

templ contactCard(emoji string, label string, value string, href string) {
	<a href={ templ.SafeURL(href) } class="block glass-card p-6 rounded-xl text-center hover:border-primary transition-colors" target="_blank" rel="noopener noreferrer">
		<div class="text-3xl mb-3">{ emoji }</div>
		<p class="font-semibold text-foreground">{ label }</p>
		<p class="text-primary text-sm">{ value }</p>
	</a>
}